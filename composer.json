{
    "name": "popphp/popcorn",
    "description": "Popcorn, A REST-Based PHP Micro Framework",
    "keywords": [
        "rest framework",
        "php micro framework",
        "popcorn"
    ],
    "homepage": "http://popcorn.popphp.org/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@nolainteractive.com",
            "homepage": "http://www.nolainteractive.com/"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "popphp/popphp": "^4.3.5",
        "popphp/pop-cookie": "^4.0.1",
        "popphp/pop-http": "^5.2.11",
        "popphp/pop-session": "^4.0.0",
        "popphp/pop-view": "^4.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.0"
    },
    "suggest": {
        "popphp/pop-db": "For DB management and transactions",
        "popphp/pop-form": "For HTML form generation and validation"
    },
    "autoload": {
        "psr-4": {
            "Popcorn\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Popcorn\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.1.x-dev"
        }
    }
}
