{
    "name": "popphp/popcorn",
    "description": "Popcorn, A REST-Based PHP Micro Framework",
    "keywords": [
        "rest framework",
        "php micro framework",
        "popcorn"
    ],
    "homepage": "https://github.com/popphp/popcorn",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.3.0",
        "popphp/popphp": "^4.4.0",
        "popphp/pop-cookie": "^4.0.4",
        "popphp/pop-http": "^5.3.8",
        "popphp/pop-session": "^4.0.4",
        "popphp/pop-view": "^4.0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0.0"
    },
    "suggest": {
        "popphp/pop-db": "For DB management and transactions",
        "popphp/pop-form": "For HTML form generation and validation"
    },
    "autoload": {
        "psr-4": {
            "Popcorn\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Popcorn\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.1.x-dev"
        }
    }
}
